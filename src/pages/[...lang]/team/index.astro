---
import Base from "@/layouts/Base.astro";
import { getEntryCTM } from "@/lib/contentParser.astro";
import handleDraftPage from "@/lib/utils/handleDraftPage";
import OurTeam from "@/components/sections/TeamSection.astro";
import { generatePaths } from "@/lib/utils/languageParser.ts";
import Features from "@/components/sections/Features.astro";
import TestimonialCreative from "@/components/sections/TestimonialCreative.astro";

export function getStaticPaths() {
  return generatePaths();
}

const page = await getEntryCTM("team", "-index", Astro.currentLocale);

// Remove drafts pages in production
const response = handleDraftPage(page?.data);
if (response) return response;
---

<Base {...page?.data}>
  <!-- <PageHeader content={page?.data} /> -->
  <OurTeam content={page?.data.teamSection} />
  <TestimonialCreative />
  <Features sectionSpaceTop={false} />
  <!-- <CallToAction sectionSpaceTop={false} /> -->
</Base>
