---
import Base from "@/layouts/Base.astro";
import { getEntryCTM } from "@/lib/contentParser.astro";
import { generatePaths } from "@/lib/utils/languageParser.ts";
import Clients from "@/components/sections/Clients.astro";
import Features from "@/components/sections/Features.astro";
import Awards from "@/components/sections/Awards.astro";
import Stats from "@/components/sections/StatsSection.astro";
import ContactSection from "@/components/sections/ContactSection.astro";
import TeamSection from "@/components/sections/TeamSection.astro";
import AboutTwo from "@/components/sections/AboutTwo.astro";
import PageHeader from "@/components/widgets/PageHeader.astro";

export function getStaticPaths() {
  return generatePaths();
}

const page = await getEntryCTM("about-us", "-index", Astro.currentLocale);
---

<Base {...page?.data} footerLayout={"footer-2"} hideOffcanvas={true}>
  <PageHeader content={page?.data} />
  <Stats />
  <AboutTwo />
  <Awards />
  <TeamSection />
  <ContactSection />
  <Clients />
  <Features />
  <!-- <CallToAction sectionSpaceTop={false} /> -->
</Base>
